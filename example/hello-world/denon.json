{
  "$schema": "https://deno.land/x/denon/schema.json",
  "scripts": {
    "start": {
      "cmd": "deno run server.ts",
      "desc": "Run the dev server.",
      "allow": [
        "net",
        "read"
      ],
      "unstable": true
    }
  },
  "watcher": {
    "interval": 350,
    "exts": ["js", "jsx", "ts", "tsx", "json"],
    "skip": ["*/.git/*"],
    "legacy": false
  }
}